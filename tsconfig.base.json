{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@oss-ccm/frontend/login/feature": [
        "libs/frontend/login/feature/src/index.ts"
      ],
      "@oss-ccm/frontend/register/feature": [
        "libs/frontend/register/feature/src/index.ts"
      ],
      "@oss-ccm/frontend/shared/ui/footer": [
        "libs/frontend/shared/ui/footer/src/index.ts"
      ],
      "@oss-ccm/frontend/shared/ui/navbar": [
        "libs/frontend/shared/ui/navbar/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
